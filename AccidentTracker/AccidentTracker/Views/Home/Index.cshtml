    ViewBag.Title = "Home";
}


<div class="wrapper row3">
    <div id="slider" class="clear">
        <div class="flexslider basicslider">
            <ul class="slides">
                <li><a href="#"><img class="radius-10" src="~/Images/slides/01.png" alt=""></a></li>
                <li><a href="#"><img class="radius-10" src="~/Images/slides/02.png" alt=""></a></li>
